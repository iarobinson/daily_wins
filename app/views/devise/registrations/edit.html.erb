<div class="container">
  <h2 class="text-center">Settings</h2>
  <div class="row">
    <div class="col-md-6 offset-md-3 py-4">

      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar %>
      <% end %>
      <div class="card mb-3">
        <div class="card-header">
          Public Settings
        </div>
        <div class="card-body">
          <%= form_with(model: @user, local: true) do |f| %>
            <div class="form-group">
              <%= f.label :first_name %><br />
              <%= f.text_area :first_name, class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :last_name %><br />
              <%= f.text_area :last_name, class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :avatar %><br />
              <%= f.file_field :avatar, class:"input-control" %>
            </div>

            <%= f.submit class: "btn btn-block btn-primary" %>
          <% end %>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-header">
          Security Settings
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.submit "Update", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
          <div class="form-group">
            <label>Sign Out for Now</label>
            <p class="text-muted">You don't need to sign out. The app tries to remember you, but if you don't want to be remembered, click below.</p>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-block btn-warning" %>
          </div>
        </div>
      </div>


      <div class="card mb-3">
        <div class="card-header">
          Destroy Forever
        </div>
        <div class="card-body">
          <p>Unlike the big companies, here you can delete your data. If you want to destroy your account and all the data associated with it click below.</p>

          <div class="form-group">
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure? Once you confirm your data will be gone for the rest of time." }, method: :delete, class: "btn btn-block btn-danger" %>
          </div>

          <div class="form-group">
            <%= link_to "Back", :back, class: "btn btn-block btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
