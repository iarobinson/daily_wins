<div class="container">
  <div class="row">
    <div class="py-5 <%= standard_column_setting %>">

      <h2 class="text-center">Settings</h2>
      <div class="card mb-3" id="security-settings-card">
        <div class="card-header">
          Security Settings <span class="float-right"><small><%= link_to "...edit profile", edit_user_path(current_user) %></small></span>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autocomplete: "email", class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :current_password %><br />
              <span class="text-muted small">(We need your current password to confirm your changes)</span>
              <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              <%= f.label :password %><br />
              <span class="text-muted small">(leave blank if you don't want to change it)</span>
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.submit "Update", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
          <div class="form-group">
            <label>Sign Out for Now</label>
            <p class="text-muted">You don't need to sign out. The app tries to remember you, but if you don't want to be remembered, click below.</p>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-block btn-warning", data: {confirm: "Are you sure?"} %>
          </div>
        </div>
      </div>


      <div class="card mb-5">
        <div class="card-header">
          Destroy Forever
        </div>
        <div class="card-body">
          <p>Unlike the big companies, here you can delete your data. If you want to destroy your account and all the data associated with it click below.</p>

          <div class="form-group">
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure? Once you confirm your data will be gone for the rest of time." }, method: :delete, class: "btn btn-block btn-danger" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
