<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">

      <% @challenges.limit(3).each do |challenge| %>
        <div class="card my-3">
          <div class="card-body">
            <h2><%= challenge.title %></h2>
            <p>Description:</p>
            <p><%= challenge.description %></p>
            <ul>
              <% challenge.users.each do |user| %>
                <li><%= user.email %></li>
                <li><%= user.wins.count %></li>
              <% end %>
            </ul>
            <%= link_to "Join Challenge", challenge, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
