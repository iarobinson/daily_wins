<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h3>
        <%= @challenge.title %>
      </h3>
      <p>
        <%= @challenge.description %>
      </p>
      <% if @challenge.users.size > 0 %>
        <h3>Participants:</h3>
        <ul class="list-group mb-3">
          <% @challenge.users.each do |user| %>
            <li class="list-group-item">
              <div class="row">
                <div class="col-2">
                  <%= image_tag user.avatar, class: "img-fluid" if user.avatar.attached? %>
                </div>
                <div class="col-10">
                  <% if user.first_name %>
                    <%= user.first_name %>
                  <% else %>
                    <%= user.email %>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="text-center">
          <p>This challenge doesn't currently have any challengers.</p>
          <p>
            <%= link_to challenge_join_path(@challenge), class: "btn btn-block btn-success" do %>
              Be the first to start the challenge.
            <% end %>
          </p>
        </div>
      <% end %>

      <% if @challenge.users.include?(current_user) %>
        <%= link_to "Record a Win", new_challenge_win_path(@challenge), class: "btn btn-block btn-success" %>
      <% else %>
        <%= link_to 'Join', challenge_join_path(@challenge), class: "btn btn-block btn-success" %>
      <% end %>
      <%= link_to "Add a Friend", challenge_add_friend_path(@challenge), class: "btn btn-block btn-info" %>
      <%= link_to 'Edit', edit_challenge_path(@challenge), class: "btn btn-block btn-primary" %>
      <%= link_to 'Back', challenges_path, class: "btn btn-block btn-secondary" %>
    </div>

    <div class="col-md-8">
      <% if @challenge.wins.size > 0 %>
        <div class="row py-3">
          <div class="col">
            <% @challenge.wins.reverse.each do |win| %>
              <div class="card my-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col">
                      <p>
                        <%= image_tag win.user.avatar, class: 'img-fluid', width: "50px" %>
                        <strong>
                          <%= link_to win.title, challenge_win_path(@challenge, win) %>
                        </strong>
                        <%= win.user.first_name %> <%= win.user.last_name %>
                      </p>
                      <p><%= win.description %></p>
                    </div>
                  </div>
                  <div class="row">
                    <% win.images.limit(3).each do |image| %>
                    <div class="col">
                      <%= image_tag image, class: "img-fluid" %>
                    </div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <p>No one has recorded a win yet. Lead the way!
      <% end %>
    </div>
  </div>
</div>
