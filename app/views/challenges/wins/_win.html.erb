<div class="row py-3">
  <div class="col-3 text-center">
    <%= link_to win.user do %>
      <%= render "users/users/small_circular_avatar", avatar_to_display: win.user, image_size: 75 %>
    <% end %>
  </div>
  <div class="col-7">
    <p>
      <small>
        <%= "@#{win.user.moniker}" if win.user %><br>
        <%= "#{win.title}" if win.title %><br>
      </small>
    </p>
  </div>
  <div class="col-2 text-center">
    <% if current_user == win.user %>
      <%= link_to edit_challenge_win_path(win.challenge, win) do %>
        <i class="material-icons md-24">settings</i>
      <% end %>
    <% else %>
      <%= link_to challenge_win_path(win.challenge, win) do %>
        <i class="material-icons md-24">visibility</i>
      <% end %>
    <% end %>
  </div>
</div>

<div class="row mb-4">
  <div class="col-12">
    <%= render "challenges/wins/images", images: win.images if win.images.attached? %>
  </div>
</div>

<div class="row mb-4">
  <div class="col-12">
    <%= win.description %>
  </div>
</div>
