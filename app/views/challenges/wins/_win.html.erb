<div class="card mb-3">
  <div class="card-body">

    <div class="row mb-3">
      <div class="col-6 text-center">
        <% unless win.user.avatar.attached? %>
          <%= image_tag "default_avatar.jpg", class: 'img-fluid rounded-circle', width: "75px" %>
        <% else %>
          <%= image_tag win.user.thumbnail, class: 'img-fluid rounded-circle', width: "75px" %>
        <% end %><br>
        <%= win.user.moniker %><br>
        <%= time_ago_in_words(win.created_at) + " ago" %>
      </div>
      <div class="col-6">
        <% if current_user === win.user %>
          <%= link_to edit_challenge_win_path(win.challenge, win), class: "btn btn-block btn-sm btn-primary"  do %>
            <%= material_icon.edit %><br>Edit
          <% end %>
        <% end %>
        <%= link_to challenge_win_path(win.challenge, win), class: "btn btn-block btn-sm btn-primary"  do %>
          <%= material_icon.remove_red_eye %><br>show
        <% end %>
      </div>
    </div>

    <div class="row">
      <%= render "challenges/wins/row_of_win_assets", assets: win.images.limit(3) %>
    </div>
    <div class="row">
      <div class="card-body">
        <h3><%= win.title %></h3>
        <p><%= win.description %></p>
      </div>
    </div>
  </div>
</div>
