<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 pb-5">

      <h1><%= @win.title %></h1>
      <p>
        <%= image_tag @win.user.avatar, class: "img-fluid", width: "50px" if @win.user.avatar.attached? %>
        <%= @win.user.moniker %>
      </p>
      <p><%= @win.description %></p>
      <% @win.images.each do |image| %>
        <%= image_tag image, class: "img-fluid my-3" %>
      <% end %>

      <%= link_to 'Edit', edit_challenge_win_path(@challenge, @win), class: "btn btn-block btn-primary" %>
      <%= link_to 'Back', challenge_path(@challenge), class: "btn btn-block btn-primary" %>
    </div>
  </div>
</div>
