<div class="container">
  <div class="row">
    <div class="col-md-6 offset-3">
      <% if @users.size > 0 %>
        <h3 class="text-center">Users</h3>
        <p class="text-center text-muted">User count: <%= @users.size %></p>
        <% @users.each do |user| %>
          <%= link_to user.email, user %><br>
        <% end %>
      <% else %>
        No users are currently signed up to this application.
      <% end %>
    </div>
  </div>
</div>
