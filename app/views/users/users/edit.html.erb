<div class="container">
  <div class="row mb-5">
    <div class="<%= standard_column_setting %> py-3">

      <div class="card mb-3">
        <div class="card-body">
          <%= render @user %>
          <div class="row mt-4">
            <div class="col">
              <%= link_to "Security settings", edit_user_registration_path %>
            </div>
            <div class="col">
              <%= link_to "Public profile", user_path(current_user) %>
            </div>
          </div>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-header">
          Public Settings
        </div>
        <div class="card-body">
          <%= form_with(model: @user, url: user_url(@user), method: :patch, local: true) do |f| %>
            <div class="form-group">
              <%= f.label :moniker, "Username" %><small class="text-muted float-right">What do you want your @name to be?</small><br />
              <%= f.text_area :moniker, class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :first_name %><br />
              <%= f.text_area :first_name, class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :last_name %><br />
              <%= f.text_area :last_name, class:"form-control" %>
            </div>

            <%= render "layouts/bootstrap_file_field", f: f, image_symbol: :avatar %>

            <%= f.submit class: "btn btn-block btn-primary" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
