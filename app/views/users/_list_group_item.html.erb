<%= link_to users_admin_path(user), class: "list-group-item list-group-item-action flex-column align-items-start"  do %>
  <div class="row">
    <div class="col-4">
      <% if user.avatar.attached? %>
        <%= image_tag user.thumbnail, class: "img-fluid rounded-circle" %>
      <% else %>
        <%= image_tag "default_avatar.jpg", class: 'img-fluid rounded-circle' %>
      <% end %>
    </div>
    <div class="col-8">
      <h5 class="mb-1">
        <%= user.moniker %>
      </h5>
      <p class="mb-1">
        <small>
          <strong>
            Challenges
            <span class="badge badge-primary badge-pill">
              <%= user.challenges.size %>
            </span>
          </strong><br>
          <strong>
            Wins
            <span class="badge badge-primary badge-pill">
              <%= user.wins.size %>
            </span>
          </strong>
        </small>
      </p>
    </div>
  </div>
<% end %>
