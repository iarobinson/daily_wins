<%= link_to user_path(user), class: "list-group-item list-group-item-action flex-column align-items-start"  do %>
  <div class="row">
    <div class="col-4">
      <% if user.avatar.attached? %>
        <%= image_tag user.thumbnail, class: "img-fluid rounded-circle", width: "50px" %>
      <% else %>
        <%= image_tag "default_avatar.jpg", class: "img-fluid rounded-circle", width: "50px" %>
      <% end %>
    </div>
    <div class="col-8">
      <h5 class="mb-1">
        <%= "@#{user.moniker}" if user.moniker %>
      </h5>
      <p class="mb-1">
        <small>
          <strong>
            Challenges
          </strong>
        </small>
        <span class="badge badge-primary">
          <%= user.challenges.size %>
        </span>
        <small>
          <strong>
            Wins
          </strong>
        </small>
        <span class="badge badge-primary">
          <%= user.wins.size %>
        </span>
      </p>
    </div>
  </div>
<% end %>
