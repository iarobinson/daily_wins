<% image_size = 75 unless image_size %>
<% avatar_to_display = current_user unless avatar_to_display %>
<% if avatar_to_display.avatar.attached? %>
  <%= image_tag url_for(avatar_to_display.avatar), class: "rounded-circle img-fluid", style: "width:#{image_size}px;max-height:#{image_size}px;" %>
<% else %>
  <%= image_tag "default_avatar", class: "rounded-circle img-fluid", style: "width:#{image_size}px;max-height:#{image_size}px;" %>
<% end %>
