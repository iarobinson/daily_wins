<div class="container">
  <h2 class="text-center">Profile</h2>
  <div class="row">
    <div class="col-md-6 offset-md-3 py-4">

      <div class="card mb-3">
        <div class="row">
          <div class="col-3">
            <%= render "users/small_circular_avatar" %>
          </div>
          <div class="col-9 py-3">
            <p>
              <%= @user.first_name %> <%= @user.last_name %> | <%= @user.email %>
            </p>
            <p>
              <%= link_to "View Public Profile", user_path(@user) %>
            </p>
          </div>
        </div>
      </div>
      <div class="card mb-3">
        <div class="card-header">
          Public Settings
        </div>
        <div class="card-body">
          <%= form_with(model: @user, url: users_url(@user), method: :patch, local: true) do |f| %>
            <div class="form-group">
              <%= f.label :moniker %><br />
              <%= f.text_area :moniker, class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :first_name %><br />
              <%= f.text_area :first_name, class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :last_name %><br />
              <%= f.text_area :last_name, class:"form-control" %>
            </div>

            <%= render "layouts/bootstrap_file_field", f: f, image_symbol: :avatar %>

            <%= f.submit class: "btn btn-block btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
