<div class="container">
  <div class="row">
    <div class="<%= standard_column_setting %> mb-5 mt-3">

      <h2 class="text-center">Profile</h2>

      <div class="card mb-3">
        <div class="card-body">
          <%= render @user %>
          <div class="row mt-4">
            <div class="col">
              <%= link_to "Edit Security Settings", edit_user_registration_path, class: "btn btn-block btn-primary" %>
            </div>
            <div class="col">
              <%= link_to "View Public Profile", user_path(current_user), class: "btn btn-block btn-primary" %>
            </div>
          </div>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-header">
          Public Settings
        </div>
        <div class="card-body">
          <%= form_with(model: @user, url: user_url(@user), method: :patch, local: true) do |f| %>
            <div class="form-group">
              <%= f.label :moniker %><br />
              <%= f.text_area :moniker, class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :first_name %><br />
              <%= f.text_area :first_name, class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :last_name %><br />
              <%= f.text_area :last_name, class:"form-control" %>
            </div>

            <%= render "layouts/bootstrap_file_field", f: f, image_symbol: :avatar %>

            <%= f.submit class: "btn btn-block btn-primary" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
